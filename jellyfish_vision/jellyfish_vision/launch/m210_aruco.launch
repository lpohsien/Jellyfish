<?xml version="1.0"?>
<launch>
  <arg name="drone_name" default="dji_m210"/>
  <arg name="camera_info_url" default="file:///$(find jellyfish_vision)/config/$(arg drone_name)_info.yaml"/>
  <arg name="visualize" default="true"/>
  <arg name="dictionary" default="ARUCO_MIP_36h12"/>
  <arg name="marker_id" default="14"/>
  <arg name="marker_size" default="1"/>
  <arg name="use_enclosed" default="false"/>
  <arg name="marker_frame" default="aruco"/>
  <arg name="use_pose_tracker" default="true"/>
  <arg name="publish_tf" default="true"/>

  <node ns="$(arg drone_name)" pkg="image_proc" type="image_proc" name="$(arg drone_name)_image_proc">
    <remap from="image_raw" to="/$(arg drone_name)/camera/dji_sdk/image_raw" />
    <remap from="camera_info" to="/$(arg drone_name)/camera/dji_sdk/camera_info"/>
  </node>

  <node pkg="aruco_ros_wrapper" type="simple_single" name="$(arg drone_name)_aruco_node" output="screen">
    <remap from="camera_info" to="/$(arg drone_name)/camera/dji_sdk/camera_info"/>
    <remap from="/image" to="/$(arg drone_name)/image_rect"/>
    <param name="image_is_rectified" value="true"/>
    <param name="dictionary" value="$(arg dictionary)"/>
    <param name="marker_id" value="$(arg marker_id)"/>
    <param name="marker_size" value="$(arg marker_size)"/>
    <param name="use_enclosed" value="$(arg use_enclosed)"/>
    <param name="camera_frame" value="$(arg drone_name)_gimbal"/>
    <param name="marker_frame" value="$(arg marker_frame)"/>
    <param name="corner_refinement" value="CORNER_SUBPIX"/>
    <param name="rotate_marker_axis" value="false"/>
    <param name="use_pose_tracker" value="$(arg use_pose_tracker)"/>
    <param name="publish_tf" value="$(arg publish_tf)"/>
  </node>

  <node pkg="image_view" type="image_view" name="$(arg drone_name)_image_view" if="$(arg visualize)">
    <remap from="image" to="$(arg drone_name)_aruco_node/result"/>
  </node>

  <node pkg="tf2_ros" type="static_transform_publisher" name="aruco_rotater" args="0 0 0 0.5 0.5 0.5 -0.5 $(arg drone_name)_gimbal_rotated $(arg drone_name)_gimbal" /> 

</launch>